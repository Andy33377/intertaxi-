// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // берётся из твоего .env
}

model Order {
  id         Int      @id @default(autoincrement())
  name       String
  phone      String
  passengers Int
  childSeat  Boolean  @default(false)
  comment    String?
  from       String
  to         String
  date       String
  time       String
  roundTrip  Boolean  @default(false)
  returnDate String?
  returnTime String?
  createdAt  DateTime @default(now())

  @@index([createdAt], map: "idx_order_createdAt")
  @@index([date, time], map: "idx_order_date_time")
}

model User {
    id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}




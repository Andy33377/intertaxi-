// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // берётся из твоего .env
}

model Order {
  id         Int      @id @default(autoincrement())
  name       String
  phone      String
  passengers Int
  childSeat  Boolean  @default(false)
  comment    String?
  createdAt  DateTime @default(now())
}

model User {
    id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}



